<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_wizard_appointment_rejected" model="ir.ui.view">
            <field name="name">open.wizard.appointment</field>
            <field name="model">appointment.reject</field>

            <field name="arch" type="xml">
                <form string="appointment">
                    <sheet>
                        <group>
                            <field name="reason" />
                        </group>
                        <footer>
                        <button name='button_confirm_reject' string='Send' class='oe_highlight'
                            type='object' />
                        <button string ="Cancel" special="cancel"/>
                        </footer>
                    </sheet>

                </form>
            </field>
        </record>


    </data>
</odoo>